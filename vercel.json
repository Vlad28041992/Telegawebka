{
  "version": 2,
  "builds": [
    {
      "src": "api.py",  // Путь до твоего Flask приложения
      "use": "@vercel/python"  // Используем Python для деплоя
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // Все запросы к /api идут в api.py
      "dest": "api.py"
    }
  ]
}
